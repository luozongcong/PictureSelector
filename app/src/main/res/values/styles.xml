<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/picture_bar_grey</item>
        <item name="colorPrimaryDark">@color/picture_bar_grey</item>
        <item name="colorAccent">@color/picture_bar_grey</item>
    </style>

    <!--白色主题样式，，注意每一项都不能少-->
    <style name="picture.white.style" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--标题栏背景色-->
        <item name="colorPrimary">#F7F7F7</item>
        <!--状态栏背景色-->
        <item name="colorPrimaryDark">#F7F7F7</item>
        <!--是否改变图片列表界面状态栏字体颜色为黑色-->
        <item name="picture_statusFontColor">true</item>
        <!--返回键图标-->
        <item name="picture_leftBack_icon">@drawable/ic_action_back</item>
        <!--title图标文字的padding-->
        <item name="picture_title_action_padding">20dp</item>
        <!--标题下拉箭头-->
        <item name="picture_arrow_down_icon">@drawable/ic_arrow_down</item>
        <!--标题上拉箭头-->
        <item name="picture_arrow_up_icon">@drawable/ic_arrow_up</item>
        <!--标题文字颜色-->
        <item name="picture_title_textColor">@color/picture_black</item>
        <!--标题栏右边文字-->
        <item name="picture_right_textColor">#FF9915</item>
        <!--标题文字大小-->
        <item name="picture_title_textSize">17sp</item>
        <!--标题栏右边文字大小-->
        <item name="picture_right_textSize">14sp</item>
        <!--图片列表勾选样式-->
        <item name="picture_checked_style">@drawable/orange_selector_checkbox</item>
        <!--开启图片列表勾选数字模式,开启的话勾选样式要换-->
        <item name="picture_style_checkNumMode">false</item>
        <!--选择图片样式0/9-->
        <item name="picture_style_numComplete">true</item>
        <!--图片列表底部背景色-->
        <item name="picture_bottom_bg">@color/color_fa</item>
        <!--图片列表预览文字颜色-->
        <item name="picture_preview_textColor">@color/picture_tab_color_false</item>
        <!--图片列表已完成文字颜色-->
        <item name="picture_complete_textColor">@color/picture_tab_color_false</item>
        <!--图片已选数量圆点背景色-->
        <item name="picture_num_style">@drawable/pic_num_oval</item>
        <!--预览界面标题栏背景色-->
        <item name="picture_ac_preview_title_bg">@color/white</item>
        <!--预览界面标题文字颜色-->
        <item name="picture_ac_preview_title_textColor">@color/black</item>
        <!--预览界面已完成文字颜色-->
        <item name="picture_ac_preview_complete_textColor">@color/picture_tab_color_false</item>
        <!--预览界面底部背景色-->
        <item name="picture_ac_preview_bottom_bg">@color/color_fa</item>
        <!--预览界面返回箭头-->
        <item name="picture_preview_leftBack_icon">@drawable/ic_action_back</item>
        <!--裁剪页面标题背景色-->
        <item name="picture_crop_toolbar_bg">@color/bar_grey</item>
        <!--裁剪页面状态栏颜色-->
        <item name="picture_crop_status_color">@color/bar_grey</item>
        <!--裁剪页面标题文字颜色-->
        <item name="picture_crop_title_color">@color/white</item>
        <!--相册文件夹列表选中图标-->
        <item name="picture_folder_checked_dot">@drawable/pic_orange_oval</item>
    </style>

